{
  "name": "execa-sh",
  "version": "0.0.0",
  "description": "Add parsing, common shell builtins, and modules to execa to make a functional shell similar to ash or bash.",
  "homepage": "",
  "author": {
    "name": "Kevin L Caswick",
    "email": "24442686+kcaswick@users.noreply.github.com"
  },
  "files": [
    "lib"
  ],
  "main": "lib/cli.ts",
  "type": "module",
  "keywords": [
    "shelljs",
    "bash",
    "sh",
    "posix",
    "unix",
    "shell",
    "zx",
    "synchronous"
  ],
  "dependencies": {
    "execa": "^7.1.1",
    "shelljs": "^0.8.5",
    "yargs": "^17.7.1"
  },
  "devDependencies": {
    "@types/assert": "^1.5.6",
    "@types/jest": "^29.5.0",
    "@types/node": "^16.18.22",
    "@types/shelljs": "^0.8.11",
    "@types/yargs": "^17.0.24",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "assert": "^2.0.0",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-xo": "^0.27.2",
    "eslint-plugin-deprecation": "^1.3.3",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "jest-expect-message": "^1.1.3",
    "jest-extended": "^3.2.4",
    "lint-staged": "^12.5.0",
    "nerdbank-gitversioning": "^3.6.79-alpha",
    "prettier": "^2.8.7",
    "typescript": "^4.9.5"
  },
  "engines": {
    "npm": ">= 4.0.0"
  },
  "prettier": {
    "endOfLine": "auto",
    "printWidth": 132,
    "tabWidth": 2,
    "useTabs": false
  },
  "lint-staged": {
    "*": "prettier --ignore-unknown --write",
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "eslintConfig": {
    "$schema": "https://json.schemastore.org/eslintrc.json",
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2022,
      "project": "./tsconfig.json",
      "sourceType": "module",
      "warnOnUnsupportedTypeScriptVersion": false
    },
    "plugins": [
      "deprecation",
      "@typescript-eslint",
      "prettier",
      "simple-import-sort"
    ],
    "reportUnusedDisableDirectives": true,
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "xo",
      "prettier"
    ],
    "env": {
      "jest": true,
      "node": true
    },
    "rules": {
      "prettier/prettier": "warn"
    }
  },
  "scripts": {
    "build": "tsc -p ./",
    "pretest": "eslint lib",
    "prepare": "husky install",
    "prettify": "prettier --write .",
    "test": "jest"
  },
  "repository": "https://github.com/kcaswick/execa-sh.git",
  "jest": {
    "testEnvironment": "node",
    "rootDir": "./lib",
    "collectCoverage": true,
    "coverageDirectory": "<rootDir>/../temp/test",
    "collectCoverageFrom": [
      "<rootDir>/**/*.{ts,tsx}"
    ],
    "coverageReporters": [
      "json",
      "lcov",
      "text-summary"
    ],
    "globals": {
      "ts-jest": {
        "diagnostics": {
          "ignoreCodes": "TS151001"
        }
      }
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "temp/test",
          "outputName": "junit.xml"
        }
      ]
    ],
    "setupFilesAfterEnv": [
      "jest-expect-message"
    ],
    "testMatch": [
      "<rootDir>/**/lib/**/*.(spec|test).+(ts|js)?(x)",
      "<rootDir>/**/__tests__/**/*.(spec|test).+(ts|js)?(x)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    }
  },
  "license": "MIT"
}
